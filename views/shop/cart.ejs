<% layout('layouts/postsIndex') -%>

<div class="container-fluid px-3" >
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center text-center mb-4 mt-3">
            <h1 class="font-weight-bold">Cart</h1>
        </div>
    </div>
    <% if(posts) { %>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <ul class="list-group">
                    <% posts.forEach((post) => { %>
                        <li class="list-group-item shadow cart-background">
                            <div class="row">
                                <div class="col-md-2 col-sm-4">
                                    <a href="#"><img src="<%= post.item.images[0].url %>" class="rounded-image"></a>
                                </div>
                                <div class="col-md-10 col-sm-4">
                                    <div class="row d-flex justify-content-between mx-3 mt-3">
                                        <div class="">
                                            <h2 class="mx-2"><%= post.item.title %></h2>
                                        </div>
                                        <div class="">
                                            <span class="badge badge-info ml-5 float-right font-14"><b>Price:</b> $<%= post.price %></span>
                                        </div>
                                    </div>
                                    <div class="row d-flex justify-content-between mx-3 mb-5">
                                        <div class="">
                                            <a href="/reduce/<%= post.item._id%>" class="btn btn-light btn-sm btn-xs px-3 py-2" type="button"><i class="fas fa-minus"></i> </a>
                                            <a href="/increase/<%= post.item._id%>" class="btn btn-warning btn-sm btn-xs px-3 py-2 type="button"><i class="fas fa-plus"></i> </a>
                                            <a href="/remove/<%= post.item._id%>" class="btn btn-danger btn-sm btn-xs px-3 py-2"><i class="fas fa-trash-alt"></i></a>
                                        </div>
                                        <div> 
                                            <span class="badge badge-primary font-14 float-right">Quantity: <%= post.qty %></span>
                                        </div>
                                    </div>  
                                </div>
                            </div>
                        </li>
                    <% }) %>
                    
                </ul>
                <%  if(totalPrice) { %>
                    <div class="row d-flex justify-content-end">
                        <div class="mt-5 mr-5 text-dark text-right">
                            <strong><b>Total Price:</b> <%= totalPrice %>â‚¬</strong>
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-5">
                        <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3 text-center">
                            <a href="/checkout" type="button" class="btn btn-outline-danger">Checkout</a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row mb400">
                        <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3 text-center">
                            <h2>Empty</h2>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>
    
    
    <% if(!posts) { %>
        <div class="row mb400">
            <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3 text-center">
                <h2>Empty</h2>
            </div>
        </div>
    <% } %>
</div>