<% layout('layouts/postsIndex') -%>

<% if(posts) { %>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <ul class="list-group">
                <% posts.forEach((post) => { %>
                    <li class="list-group-item">
                        <div class="row">
                            <h3 class="mx-2"><%= post.item.title %></h3>
                            <div>
                                <span class="badge badge-success mx-2">$<%= post.price %></span>
                            </div>
                            <div class="mx-2">
                              
                                <a href="#" class="btn btn-info" type="button"><i class="fas fa-minus"></i> </a>
                                <a href="#" class="btn btn-info" type="button"><i class="fas fa-plus"></i> </a>
                                <a href="#" class="btn btn-info"><i class="fas fa-trash-alt"></i></a>
                            </div>
                            <div>
                                <span class="badge badge-secondary" style="margin-left: 150px;"><%= post.qty %></span>

                            </div>
                        </div>
                    </li>
                    
                <% }) %>
                
            </ul>
            <%  if(totalPrice > 0) { %>
                <div class="row">
                    <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3">
                        <strong>Total Price: <%= totalPrice %> </strong>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3">
                        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <div class="col-sm-6 col-md-6 offset-md-3 coffset-sm-3">
                        <h2>No items in cart</h2>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
<% } %>
