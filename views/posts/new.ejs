<% layout('layouts/postsIndex') -%>
<div class="conatiner-fluid" style="padding-left: 15%; padding-top: 115px; padding-right: 15%;">
<h1>New Post!</h1>

<form action="/posts" method="POST" enctype="multipart/form-data">
    <div>
        <input type="text" name="post[title]" placeholder="Title" required>
    </div>
    <div> 
        <label for="type">Choose a wine type:</label>
        <select name="post[type]">
            <option value="red">Red</option>
            <option value="white">White</option>
            <option value="sparkling">Sparkling</option>
            <option value="fortified"> Fortified</option>
        </select>   
    </div>
    <div>
        <input type="number" name="post[price]" step=".01" placeholder="Price" required>
    </div>
    <div>
        <input type="file" accept="images/*" name="images" multiple required>
    </div>
    <div>
        <textarea name="post[description]" placeholder="Description" required></textarea>
    </div>
    <div>
        <input type="text" name="post[location]" placeholder="Location" required>
    </div>
    <button>Submit</button>
</form>

</div>