<% layout('layouts/boilerplate') -%>
<h1>New Post!</h1>

<form action="/posts" method="POST" enctype="multipart/form-data">
    <div>
        <input type="text" name="post[title]" placeholder="Title">
    </div>
    <div> 
        <label for="type">Choose a wine type:</label>
        <select name="post[type]">
            <option value="red">Red</option>
            <option value="white">White</option>
            <option value="sparkling">Sparkling</option>
            <option value="fortified"> Fortified</option>
        </select>   
    </div>
    <div>
        <input type="number" name="post[price]" step=".01" placeholder="Price">
    </div>
    <div>
        <input type="file" accept="images/*" name="images" multiple>
    </div>
    <div>
        <textarea name="post[description]" placeholder="Description"></textarea>
    </div>
    <div>
        <input type="text" name="post[location]" placeholder="Location">
    </div>
    <button>Submit</button>
</form>