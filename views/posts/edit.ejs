<% layout('layouts/postsIndex') -%>


<div class="modal-dialog cascading-modal new-post px-3">
    <h1 class="text-center font-weight-bold ">Edit Post</h1>

    <div class="modal-content border border-light">
      <div>
        <div class="tab-pane active">
          <div class="modal-body mb-1">
            <form action="/posts/<%= post.id %>?_method=PUT" method="POST" id="postEditForm" enctype="multipart/form-data">
                <div class="md-form form-sm mb-3 ">
                    <input class="form-control form-control-sm" type="text" name="post[title]" placeholder="Title" value="<%= post.title %>" required>
                </div>
                <div class="md-form form-sm mb-3">
                    <label for="type">Choose a wine type:</label><br><br>
                    <select name="post[type]">
                        <option value="red">Red</option>
                        <option value="white">White</option>
                        <option value="white">Rose</option>
                        <option value="sparkling">Sparkling</option>
                        <option value="fortified"> Fortified</option>
                    </select> 
                </div>
                <div class="md-form form-sm mb-5">
                    <input class="form-control form-control-sm" type="number" name="post[price]" step=".01" placeholder="Price" value="<%= post.price %>" required>
                </div>
                <div class="md-form form-sm mb-3">
                    <textarea class="form-control form-control-sm" name="post[description]" placeholder="Description" rows="5" required><%= post.description %></textarea>
                </div>
                <div class="md-form form-sm mb-3">
                    <label for="image" class="text-wrap">Select images you want to delete or replace, then upload replacement images:</label><br><br><br>
                    <div class="text-center mt-3">
                        <% post.images.forEach((image, i) => { %>
                            <img src="<%= image.url %>" width="100px">
                            <input type="checkbox" name="deleteImages[]" class="imageDeleteCheckBox" id="image<%= i %>" value="<%= image.public_id %>">
                        <% }); %>
                    </div><br>
                    <input class="form-control form-control-sm pt-1" type="file" id="imageUpload" accept="images/*" name="images">
                </div>
                <div class="md-form form-sm mb-4">
                    <input class="form-control form-control-sm" type="text" name="post[location]" placeholder="Location" value="<%= post.location %>" required>
                </div>
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-outline-danger">Submit</button>
                </div>
            </form>
            </div>
          </div>    
        </div>
    </div>
  </div>

<script src="/javascripts/post-edit.js"></script>