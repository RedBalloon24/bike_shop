<div style="margin: 20px 0;">
    <nav aria-label="Page navigation">
        <% if (posts.pages && posts.pages > 0) { %>
            <ul class="pagination justify-content-center">
                <% if (posts.page == 1) { %>
                    <li class="disabled"><a class="page-link">First</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/posts">First</a></li>
                <% } %>
        
                <% if (posts.page == 1) { %>
                    <li class="disabled"><a class="page-link">«</a></li>
                <% } else { %>
                    <li><a class="page-link" href="<%= paginateUrl %><%= posts.page - 1 %>">«</a></li>
                <% } %>
        
                <% var i = (posts.page > 5 ? posts.page - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (posts.page + 4) && i <= posts.pages; i++) { %>
                    <% if (i == posts.page) { %>
                        <li class="active"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li><a class="page-link" href="<%= paginateUrl %><%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == posts.page + 4 && i < posts.pages) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                <% } %>
        
                <% if (posts.page == posts.pages) { %>
                    <li class="disabled"><a class="page-link">»</a></li>
                <% } else { %>
                    <li><a class="page-link" href="<%= paginateUrl %><%= posts.page + 1 %>">»</a></li>
                <% } %>
        
                <% if (posts.page == posts.pages) { %>
                    <li class="disabled"><a class="page-link">Last</a></li>
                <% } else { %>
                    <li><a href="<%= paginateUrl %><%= posts.pages %>" class="page-link">Last</a></li>
                <% } %>
            </ul>
        <% } %>
    </nav>
</div>



    
