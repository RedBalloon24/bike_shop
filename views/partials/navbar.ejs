<div class="topbar" id="top" style="z-index: 2;">
    <div class="header6" >
        <div class="container po-relative">
            <nav class="navbar navbar-expand-lg h6-nav-bar">
            <a href="/" class="navbar-brand logo text-danger font-weight-bold"><i class="fa fa-wine-bottle"></i>Connoisseur</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#h6-info" aria-controls="h6-info" aria-expanded="false" aria-label="Toggle navigation"><span class="ti-menu"></span></button>
                <div class="collapse navbar-collapse font-14 ml-auto" id="h6-info">
                    <ul class="navbar-nav ml-auto mr-2">
                        <li class="nav-item"> 
                            <a class="nav-link text-danger font-weight-bold" href="/">Home</a>
                        </li>
                        <li class="nav-item"> 
                            <a class="nav-link text-danger font-weight-bold" href="/posts">Posts</a>
                        </li>
                        <% if(!currentUser) { %>
                            <li class="nav-item"> 
                                <a class="nav-link text-danger font-weight-bold" href="/register">Register</a>
                            </li>
                            <li class="nav-item"> 
                                <a class="nav-link text-danger font-weight-bold" href="/login">Login</a>
                            </li>
                        <% } else { %>
                            <li class="nav-item"> 
                                <a class="nav-link text-danger font-weight-bold" href="/posts/new">New Post</a>
                            </li>
                        <% } %>
                    </ul>
                    <% if(currentUser) { %>
                        <% if(session.cart) { %>
                            <div class="nav-item">
                                <a class="nav-link text-light" href="/shopping-cart"><i class="fas fa-shopping-cart mr-2"></i>Shopping Cart<span class="badge badge-light ml-2"><%= session.cart.totalQty %></span></a>
                            </div>
                        <% } else { %>
                            <div class="nav-item">
                                <a class="nav-link text-light" href="/shopping-cart"><i class="fas fa-shopping-cart mr-2"></i>Shopping Cart<span class="badge badge-light ml-2">0</span></a>
                            </div>
                        <% } %>

                        <div class="btn-group">
                            <button type="button" class="btn btn-info-gradiant text-light font-14 text-capitalize font-weight-bold dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding-left: 10px !important; padding-right: 10px !important; padding-top: 10px !important; padding-bottom: 10px !important;">Notifications <span class="badge"><%= notifications.length %></span></button>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item">
                                    <a class="text-dark font-weight-bold" href="/notifications">View past notifications</a>
                                </li>
                                <% notifications.forEach(function(notification) { %>  
                                    <hr>                        
                                    <li class="">
                                        <a class="text-danger font-weight-bold text-capitalize" href="/notifications/<%= notification.id %>" style="font-size: 13px;">
                                            - New post/review by <%= notification.username %> 
                                        </a>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn  btn-danger-gradiant text-dark font-14 text-capitalize font-weight-bold dropdown-toggle dropdown-toggle-split" id="dropdownMenuReference" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent" style="background-color: black; padding-left: 20px !important; padding-right: 20px !important; padding-top: 10px !important; padding-bottom: 10px !important;">
                                Welcome, <%= currentUser.username %>!
                                <span class="sr-only ml-3"></span>
                            </button>
                            <div class="dropdown-menu ml-3" aria-labelledby="dropdownMenuReference"  style="background-color: black;">
                                <a class="dropdown-item text-danger font-weight-bold" href="/users/<%= currentUser._id %>">Profile</a>
                                <a class="dropdown-item text-danger font-weight-bold" href="/logout">Logout</a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </nav>
        </div>
    </div>
</div>