<% layout('layouts/boilerplate') -%>

  <div class="modal-dialog cascading-modal login">
    <div class="modal-content border border-light">
      <div class="modal-c-tabs">
        <ul class="nav nav-tabs md-tabs bg-dark">
          <li class="nav-item">
            <a class="nav-link active text-danger font-weight-bold bg-dark"><i class="fas fa-user mr-1"></i>Login</a>
          </li>
        </ul>
      </div>
      <div>
        <div class="tab-pane active">
          <div class="modal-body mb-1">
            <form action="/login" method="POST"> 
                <div class="md-form form-sm mb-5 ">
                    <i class="fas fa-envelope prefix"></i>
                    <input type="email" id="email" name="email" class="form-control form-control-sm" placeholder="Email" required>                  
                </div>
                <div class="md-form form-sm mb-4">
                    <i class="fas fa-lock prefix"></i>
                    <input type="password" id="password" name="password" class="form-control form-control-sm" placeholder="Password" required>
                </div>
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-outline-dark">Sign in</button>
                </div>
            </form>
            </div>
            <div class="modal-footer">
              <div class="text-center text-md-right mt-1">
                <p>Not a member? <a href="/register" class="text-danger">Sign Up</a></p>
                <p>Forgot <a href="/forgot-password" class="text-danger">Password?</a></p>
              </div>
              <button type="button" class="btn btn-outline-danger ml-auto">Close</button>
            </div>
          </div>    
        </div>
    </div>
  </div>
