<% layout('layouts/postsIndex') -%>

<div class="modal-dialog cascading-modal login">
    <a class="nav-link active text-danger font-weight-bold bg-dark text-center"><i class="fas fa-key mr-1"></i>Forgot Password</a>
    <div class="modal-content border border-light">
      <div>
        <div class="tab-pane active">
          <div class="modal-body mb-1">
            <form action="/forgot-password?_method=PUT" method="POST"> 
                <div class="md-form form-sm mb-5 ">
                    <i class="fas fa-envelope prefix"></i>
                    <label for="email2">Email</label>
                    <input type="email" id="email2" name="email" class="form-control form-control-sm" autofocus required>              
                </div>
                <div class="text-center mt-1">
                    <button type="submit" class="btn btn-outline-dark">Reset</button>
                </div>
            </form>
            </div>
            <div class="b-t">
                <div class="modal-footer">
                    <div class="text-center text-md-right mt-3">
                        <p>Remember Your Password? <a href="/login" class="text-danger">Sign In</a></p>
                        <p>New User? <a href="/register" class="text-danger">Sign Up</a></p>
                    </div>
                </div>
            </div>
          </div>    
        </div>
    </div>
</div>